{
  "name": "node-red-contrib-homebridge-automation",
  "version": "0.0.85",
  "description": "NodeRED Automation for HomeBridge",
  "main": "HAP-NodeRed.js",
  "scripts": {
    "api": "documentation build HAP-NodeRed.js -f md --config docs/documentation.yml > docs/API.md",
    "coverage": "nyc npm t",
    "document": "./gh-md-toc --insert README.md",
    "format": "prettier --write {.,test}/*.js *.html *.md",
    "lint": "eslint {.,test}/*.js",
    "test": "mocha \"test/**/*_spec.js\""
  },
  "keywords": [
    "node-red",
    "HomeBridge"
  ],
  "node-red": {
    "nodes": {
      "HAP-NodeRed": "HAP-NodeRed.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NorthernMan54/node-red-contrib-homebridge-automation.git"
  },
  "devDependencies": {
    "@types/node-red": "^1.1.1",
    "documentation": "13.2.5",
    "eslint": "^7.25.0",
    "eslint-plugin-mocha": "^8.1.0",
    "mocha": "^8.3.2",
    "node-red": "^1.3.4",
    "node-red-node-test-helper": "^0.2.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "debug": ">2.6.9",
    "hap-node-client": ">=0.1.14",
    "better-queue": ">=3.8.10"
  },
  "author": "NorthernMan54",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NorthernMan54/node-red-contrib-homebridge-automation/issues"
  },
  "homepage": "https://github.com/NorthernMan54/node-red-contrib-homebridge-automation#readme"
}
